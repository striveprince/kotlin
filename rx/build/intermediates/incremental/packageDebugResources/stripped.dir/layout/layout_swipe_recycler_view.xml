    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/layout_swipe_recycler_view_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/smart_refresh_layout"
            android:layout_width="match_parent"
            android:tag="binding_1"                  
                                           
