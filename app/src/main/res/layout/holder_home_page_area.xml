<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.customers.zktc.ui.home.page.HomePageAreaData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:padding="5dp">


        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView3"
            android:layout_width="168dp"
            android:layout_height="168dp"
            app:params="@{vm.operationAds[0]}"
            android:layout_margin="5dp"
            android:onClick="@{vm.operationAds[0]::onRouteClick}"
            android:src="@{vm.operationAds[0].bean.picture}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:radius="@{vm.operationAds[0].radius}" />
<!--            app:layout_constraintHorizontal_weight="1"-->

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dp"
            android:onClick="@{vm.operationAds[1]::onRouteClick}"
            android:scaleType="fitXY"
            android:src="@{vm.operationAds[1].bean.picture}"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1"
            app:radius="@{vm.operationAds[1].radius}" />
<!--            app:layout_constraintHorizontal_weight="1"-->
        <!--            app:layout_constraintDimensionRatio="3:1"-->
<!--            app:layout_constraintHorizontal_weight="1"-->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{vm.operationAds[2]::onRouteClick}"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@{vm.operationAds[2].bean.picture}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_weight="1"
            app:radius="@{vm.operationAds[2].radius}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>