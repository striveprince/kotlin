<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.customers.zktc.ui.home.classify.HomeClassifyModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/mt_actionbar_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2">

            <ImageButton
                android:id="@+id/btn_scan"
                android:layout_width="45.0dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_height="45dp"
                android:src="@mipmap/icon_pay_scan" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="34.0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:background="@drawable/mt_actionbar_search_shape"
                android:drawableLeft="@mipmap/icon_good_search_back"
                android:drawableStart="@mipmap/icon_good_search_back"
                android:drawablePadding="10.0dp"
                android:gravity="center_vertical"
                android:hint="@string/input_search_text"
                android:imeOptions="actionSearch"
                android:paddingLeft="15.0dp"
                android:paddingTop="4.0dp"
                android:paddingRight="15.0dp"
                android:paddingBottom="4.0dp"
                android:singleLine="true"
                android:textColor="@color/mt_front_primary_color"
                android:textColorHint="@color/z_999999"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_bar" >
            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.scwang.smart.refresh.layout.SmartRefreshLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>