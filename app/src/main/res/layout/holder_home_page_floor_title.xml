<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="vm"
            type="com.customers.zktc.ui.home.page.HomeFloorDataEntity" />
        <variable
            name="bean"
            type="com.customers.zktc.inject.data.net.bean.HomeFloorDataBean" />
    </data>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/rectangle_floor_title"
        android:drawableLeft="@drawable/rectangle_floor_title"
        android:gravity="start|center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:drawablePadding="15dp"
        android:text="@{bean.name,default=lsw}"
        android:textSize="16sp"
        android:textStyle="bold" />
</layout>